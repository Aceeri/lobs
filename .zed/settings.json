{
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "cargo": {
                    "features": [],
                    "allFeatures": false,
                },
                "check": {
                    "command": "clippy",
                },
                "inlayHints": {
                    "maxLength": 24,
                    "lifetimeElisionHints": {
                        "enable": "skip_trivial",
                        "useParameterNames": true,
                    },
                    "closureReturnTypeHints": {
                        "enable": "always",
                    },
                },
            },
        },
    },
}
